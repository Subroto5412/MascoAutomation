<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewModel"
            type="com.bd.mascogroup.automation.ui.gpms.hpd.HPDItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hourly_production_data_row_item_parent_cl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:background="#081B63">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hourly_production_data_layout"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="@dimen/_1sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hourly_production_data_sl_tv"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp"
                android:background="@color/white"
                android:textColor="@color/text_color"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="01."
                android:text="@{viewModel.sl}"/>

            <View
                android:layout_width="@dimen/_46sdp"
                android:layout_height="0.20dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/hourly_production_data_sl_tv"
                app:layout_constraintStart_toStartOf="@+id/hourly_production_data_sl_tv"
                app:layout_constraintTop_toBottomOf="@+id/hourly_production_data_sl_tv" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hourly_production_data_hours_tv"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp"
                android:background="@color/white"
                android:textColor="@color/text_color"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/hourly_production_data_sl_tv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="101"
                android:text="@{viewModel.hour}"/>

            <View
                android:layout_width="@dimen/_104sdp"
                android:layout_height="0.20dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/hourly_production_data_hours_tv"
                app:layout_constraintStart_toStartOf="@+id/hourly_production_data_hours_tv"
                app:layout_constraintTop_toBottomOf="@+id/hourly_production_data_hours_tv" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hourly_production_data_output_tv"
                android:layout_width="@dimen/_124sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="1dp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="right|center"
                android:background="@color/white"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/hourly_production_data_hours_tv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1,20,50,000"
                android:text="@{viewModel.output}"/>

            <View
                android:layout_width="@dimen/_121sdp"
                android:layout_height="0.20dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/hourly_production_data_output_tv"
                app:layout_constraintStart_toStartOf="@+id/hourly_production_data_output_tv"
                app:layout_constraintTop_toBottomOf="@+id/hourly_production_data_output_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--</ScrollView>-->
        <!-- </androidx.cardview.widget.CardView>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>