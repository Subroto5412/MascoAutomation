        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/daily_attendance_item_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/avail_summary_sl_tv"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/avail_item_row_corner_round"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="SL"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/avail_summary_leave_type_tv"
                android:layout_width="@dimen/_94sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/avail_item_row_corner_round"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Leave Type"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avail_summary_sl_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/avail_summary_avail_day_tv"
                android:layout_width="@dimen/_92sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/avail_item_row_corner_round"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Avail Day"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avail_summary_leave_type_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/avail_summary_from_date_tv"
                android:layout_width="@dimen/_92sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/avail_item_row_corner_round"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="From Date"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avail_summary_avail_day_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/avail_summary_date_date_tv"
                android:layout_width="@dimen/_94sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/avail_item_row_corner_round"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="To Date"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avail_summary_from_date_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/avail_summary_application_date_tv"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/avail_item_row_corner_round"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Application Date"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avail_summary_date_date_tv"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--</ScrollView>-->


        <!-- </androidx.cardview.widget.CardView>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
