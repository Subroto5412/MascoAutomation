<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewModel"
            type="com.bd.mascogroup.automation.ui.hr_info.leave.leave_details.LeaveDetailsLeaveSummaryItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_leave_detail_leave_sum_row_item_parent_cl"
        android:layout_width="@dimen/_93sdp"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_leave_detail_leave_sum_card_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_108sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:foreground="@drawable/layout_daily_attendance_row_bg"
            app:cardBackgroundColor="#081B63"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_leave_detail_leave_sum_cl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/layout_leave_detail_leave_sum_leave_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:paddingTop="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_horizontal"
                    tools:text="Leave Type"
                    android:text="@{viewModel.type_name}"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/layout_leave_detail_leave_sum_cl_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_18sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_leave_detail_leave_sum_leave_type_tv"
                    android:gravity="center"
                    tools:text="CL"
                    android:background="#FDCB6E"
                    android:text="@{viewModel.cl}"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/layout_leave_detail_leave_sum_sl_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_18sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_leave_detail_leave_sum_cl_tv"
                    android:gravity="center"
                    tools:text="SL"
                    android:text="@{viewModel.sl}"
                    android:background="#E17055"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/layout_leave_detail_leave_sum_el_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_18sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_leave_detail_leave_sum_sl_tv"
                    android:gravity="center"
                    tools:text="EL"
                    android:text="@{viewModel.el}"
                    android:background="#6AB04C"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>